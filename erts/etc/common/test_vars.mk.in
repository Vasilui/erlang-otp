include $(ERL_TOP)/make/target.mk

ifeq ($(TYPE),debug)
PURIFY =
TYPEMARKER = .debug
TYPE_FLAGS = -DDEBUG -DINSTRUMENT @DEBUG_FLAGS@
else
ifeq ($(TYPE),instr)
PURIFY =
TYPEMARKER = .instr
TYPE_FLAGS = -g -O2 -DINSTRUMENT
else
ifeq ($(TYPE),purify)
PURIFY = purify
TYPEMARKER = .purify
TYPE_FLAGS = -g -O2 -DPURIFY -DNO_JUMP_TABLE
else
ifeq ($(TYPE),quantify)
PURIFY = quantify
TYPEMARKER = .quantify
TYPE_FLAGS = -g -O2 -DQUANTIFY -DNO_JUMP_TABLE
else
PURIFY =
TYPEMARKER =
TYPE_FLAGS = -g -O2
endif
endif
endif
endif

#
#
#
ERLANG_OSTYPE = @ERLANG_OSTYPE@

SHELL     = /bin/sh
CC        = @CC@
WFLAGS    = @WFLAGS@
CFLAGS    = @CFLAGS@ @DEFS@ $(TYPE_FLAGS) $(WFLAGS) @THR_DEFS@
LIBS      = @LIBS@ @THR_LIBS@ -L$(ERL_TOP)/erts/obj/$(TARGET) -lz

EMSRCDIR   = $(ERL_TOP)/erts/emulator/beam
SYSSRCDIR  = $(ERL_TOP)/erts/emulator/sys/$(ERLANG_OSTYPE)
CONF_H_DIR = $(ERL_TOP)/erts/autoconf/$(TARGET)
OBJDIR     = $(ERL_TOP)/erts/obj$(TYPEMARKER).beam/$(TARGET)



