include $(ERL_TOP)/make/target.mk
include $(ERL_TOP)/make/$(TARGET)/otp.mk


CC = @CC@
#CC = gcc

LIBDIR = $(ERL_TOP)/lib/asn1/priv/lib/$(TARGET)

# ----------------------------------------------------
# Application version
# ----------------------------------------------------
include ../vsn.mk
VSN=$(ASN1_VSN)

# ----------------------------------------------------
# Release directory specification
# ----------------------------------------------------
RELSYSDIR = $(RELEASE_PATH)/lib/asn1-$(VSN)


# ----------------------------------------------------
# FLAGS
# ----------------------------------------------------
DRIVER_INCLUDES = -I$(ERL_TOP)/erts/emulator/beam
CFLAGS = $(DRIVER_INCLUDES) @DED_CFLAGS@ @DED_LDFLAGS@ -shared

# ----------------------------------------------------
# Target Specs
# ----------------------------------------------------

C_FILES = asn1_erl_driver.c

SHARED_OBJ_FILES = $(LIBDIR)/asn1_erl_drv.so

# ----------------------------------------------------
# Targets
# ----------------------------------------------------

opt: $(OBJDIR) $(LIBDIR) $(SHARED_OBJ_FILES)
	rm -f ../priv/bin/asn1_erl_drv*
	ln -s $(SHARED_OBJ_FILES) ../priv/bin

debug: opt

clean:
	rm -f core *~ 
	rm -f $(LIBDIR)/*

docs:

# ----------------------------------------------------
# Special Build Targets
# ----------------------------------------------------


$(LIBDIR)/asn1_erl_drv.so: $(C_FILES) $(LIBDIR)
	$(CC) $(CFLAGS) -o $(SHARED_OBJ_FILES) $(C_FILES) 

$(LIBDIR):
	-mkdir -p $(LIBDIR)

$(OBJDIR):
	-mkdir -p $(OBJDIR)


 
# ----------------------------------------------------
# Release Target
# ----------------------------------------------------
include $(ERL_TOP)/make/otp_release_targets.mk

release_spec: opt
	$(INSTALL_DIR) $(RELSYSDIR)/priv/bin
	$(INSTALL_DATA) $(SHARED_OBJ_FILES) $(RELSYSDIR)/priv/bin

release_docs_spec:
