include $(ERL_TOP)/make/target.mk
include $(ERL_TOP)/make/$(TARGET)/otp.mk

BINDIR = ../priv/bin/$(TARGET)
OBJDIR = ../priv/obj/$(TARGET)
INCLUDE_DIR= ../include

# ----------------------------------------------------
# Application version
# ----------------------------------------------------
include ../vsn.mk
include $(ERL_TOP)/lib/ic/vsn.mk
include $(ERL_TOP)/lib/erl_interface/vsn.mk
VSN=$(ODBC_VSN)

# ----------------------------------------------------
# Release directory specification
# ----------------------------------------------------
RELSYSDIR = $(RELEASE_PATH)/src/odbc-$(VSN)

# ----------------------------------------------------
# C Target Specs
# ----------------------------------------------------
ifeq ($(findstring win32,$(TARGET)),win32)
MAKEFILE = Makefile.dist.win32.src
else
ifeq ($(findstring vxworks,$(TARGET)),vxworks)
MAKEFILE = Makefile.dist.unix.src
else
MAKEFILE = Makefile.dist.unix.src
endif
endif

C_FILES = odbcserver.c convert_macros.c odbclli_cb.c
H_FILES = odbclli_cb.h odbclli_cb_codes.h

# ----------------------------------------------------
# Erlang Target spec
# ----------------------------------------------------
IDL_FILES = \
	odbclli.idl

MODULES= \
	odbc \
	odbc_app \
	odbc_sup

ERL_FILES = \
	$(MODULES:%=%.erl) 

APP_FILE= odbc.app

APP_SRC= $(APP_FILE).src
APP_TARGET= $(EBIN)/$(APP_FILE)
MAKE_TARGET= $(OBJDIR)/Makefile

# ----------------------------------------------------
# FLAGS
# ----------------------------------------------------

# ----------------------------------------------------
# Targets
# ----------------------------------------------------

opt:
	echo "Nothing to build"

debug:
	echo "Nothing to build"

clean:
	rm -f oe_* *__* odbclli.?rl core *~

docs:

# ----------------------------------------------------
# Special Build Targets
# ----------------------------------------------------
$(APP_TARGET): $(APP_SRC) ../vsn.mk
	sed -e 's;%VSN%;$(VSN);' $< > $@

$(OBJDIR):
	-mkdir -p $(OBJDIR)

$(MAKE_TARGET): $(MAKEFILE)
	sed -e 's;%EMU%;$(EMULATOR);' \
	    -e 's;%IC%;ic-$(IC_VSN);' \
	    -e 's;%EI%;erl_interface-$(EI_VSN);' \
	    $< > $@

# ----------------------------------------------------
# Release Target
# ---------------------------------------------------- 
include $(ERL_TOP)/make/otp_release_targets.mk

release_spec: $(APP_TARGET) $(OBJDIR) $(OBJDIR)/Makefile
	$(INSTALL_DIR) $(RELSYSDIR)/src
	$(INSTALL_DATA) $(ERL_FILES) $(IDL_FILES) \
		$(C_FILES) $(H_FILES) $(RELSYSDIR)/src
	$(INSTALL_DATA) $(MAKE_TARGET) $(RELSYSDIR)/src
	$(INSTALL_DIR) $(RELSYSDIR)/ebin
	$(INSTALL_DATA) $(APP_TARGET) $(RELSYSDIR)/ebin
	$(INSTALL_DIR) $(RELSYSDIR)/priv
	$(INSTALL_DIR) $(RELSYSDIR)/priv/bin
	$(INSTALL_DIR) $(RELSYSDIR)/priv/obj
	$(INSTALL_DIR) $(RELSYSDIR)/include

release_docs_spec:
