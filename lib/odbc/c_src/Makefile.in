include $(ERL_TOP)/make/target.mk
include $(ERL_TOP)/make/$(TARGET)/otp.mk

ifeq ($(TYPE),debug)
TYPEMARKER = .debug
else
TYPEMARKER =
endif

WINBINDIR = ../priv/bin
BINDIR = ../priv/bin/$(TARGET)
OBJDIR = ../priv/obj/$(TARGET)
INCLUDE_DIR= ../include
EIROOT = $(ERL_TOP)/lib/erl_interface

.PHONY: create_dirs

# ----------------------------------------------------
# Application version
# ----------------------------------------------------
include ../vsn.mk
include $(ERL_TOP)/lib/erl_interface/vsn.mk
VSN=$(ODBC_VSN)

# ----------------------------------------------------
# Release directory specification
# ----------------------------------------------------
RELSYSDIR = $(RELEASE_PATH)/lib/odbc-$(VSN)

# ----------------------------------------------------
# Target Specs
# ----------------------------------------------------
ifeq ($(findstring win32,$(TARGET)),win32)
MAKEFILE = makefiles/Makefile.win32.src
ENTRY_OBJ=$(ERL_TOP)/erts/obj/$(TARGET)/port_entry.o
PORT_ENTRY_POINT=erl_port_entry
ENTRY_LDFLAGS=-entry:$(PORT_ENTRY_POINT)
WIN32_TARGET = $(WINBINDIR)/odbcserver.exe
EXE_TARGET = $(WIN32_TARGET)
else
MAKEFILE = makefiles/Makefile.unix.src
ifeq ($(OTP_RELEASE),yes)
ifneq ($(BITS64),yes)
ifeq ($(findstring solaris,$(TARGET)),solaris)
UNIX_TARGET = $(BINDIR)/odbcserver
EXE_TARGET = $(UNIX_TARGET)
endif
endif
endif
endif

C_FILES = odbcserver.c 
H_FILES = odbcserver.h

MAKE_TARGET = $(OBJDIR)/Makefile

# ----------------------------------------------------
# FLAGS
# ----------------------------------------------------
ODBCROOT = /opt/local/pgm/odbc
ODBCLDFLAGS = -L$(ODBCROOT)/lib
ODBCINCLUDE = $(ODBCROOT)/include

EIINCLUDE = $(EIROOT)/include
INCLUDES = -I. -I$(EIINCLUDE) -I$(ODBCINCLUDE)
CFLAGS = @CFLAGS32@
CC = @CC32@

ifeq ($(TARGET),win32)
ODBCLIBS = -lodbc32
MULTITHREADFLAGS = -DWIN32 -DMULTITHREAD_WIN32
MULTITHREADLIBS =
EILIBS = -lei_md
else
ODBCLIBS = -lodbc
MULTITHREADFLAGS = -D_REENTRANT -DMULTITHREAD_UNIX
MULTITHREADLIBS = -lpthread
EILIBS = -lei -lerl_interface
endif

EILDFLAGS = -L$(EIROOT)/obj$(TYPEMARKER)/$(TARGET)

# ----------------------------------------------------
# Targets
# ----------------------------------------------------

ifdef EXE_TARGET
opt debug: create_dirs $(EXE_TARGET) $(MAKE_TARGET)
else
opt debug:
endif

clean:	
	rm -f core *~ 
	rm -f $(OBJDIR)/*
docs:

# ----------------------------------------------------
# Special Build Targets
# ----------------------------------------------------

ifdef UNIX_TARGET
$(UNIX_TARGET): $(BINDIR) $(OBJDIR)/odbcserver.o
	$(CC) $(CFLAGS) -o $@ $(OBJDIR)/odbcserver.o $(EILDFLAGS) \
		$(ODBCLDFLAGS) $(MULTITHREADLIBS) $(EILIBS) $(ODBCLIBS)
endif

ifdef WIN32_TARGET
$(WIN32_TARGET): $(BINDIR) $(OBJDIR)/odbcserver.o
	$(LD) $(LDFLAGS) -o $@ $(OBJDIR)/odbcserver.o $(ENTRY_OBJ) \
		$(EILDFLAGS) \
		$(ODBCLDFLAGS) $(EILIBS) $(ODBCLIBS) $(ENTRY_LDFLAGS)
endif

$(OBJDIR)/odbcserver.o: $(OBJDIR) odbcserver.c
	$(CC) $(CFLAGS) $(INCLUDES) $(MULTITHREADFLAGS) -o $@ -c odbcserver.c

create_dirs:
	$(INSTALL_DIR) $(OBJDIR)
	$(INSTALL_DIR) $(BINDIR)

$(MAKE_TARGET): $(MAKEFILE)
	@echo " Make a makefile for release"
	sed -e 's;%EI%;erl_interface-$(EI_VSN);' \
	$< > $@


# ----------------------------------------------------
# Release Target
# ---------------------------------------------------- 

include $(ERL_TOP)/make/otp_release_targets.mk

release_spec: opt
ifdef EXE_TARGET
	$(INSTALL_DIR) $(RELSYSDIR)/c_src
	$(INSTALL_DATA) $(C_FILES) $(H_FILES) $(RELSYSDIR)/c_src
	$(INSTALL_DATA) $(MAKE_TARGET) $(RELSYSDIR)/c_src
	$(INSTALL_DIR) $(RELSYSDIR)/priv
	$(INSTALL_DIR) $(RELSYSDIR)/priv/bin
	$(INSTALL_DIR) $(RELSYSDIR)/priv/obj
	$(INSTALL_PROGRAM) $(EXE_TARGET) $(RELSYSDIR)/priv/bin
endif

release_docs_spec:
