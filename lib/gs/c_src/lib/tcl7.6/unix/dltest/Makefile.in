# This Makefile is used to create several test cases for Tcl's load
# command.  It also illustrates how to take advantage of configuration
# exported by Tcl to set up Makefiles for shared libraries.
# SCCS: @(#) Makefile.in 1.11 96/04/15 09:50:19

CC = @CC@
LIBS =			@LIBS@
SHLIB_CFLAGS =		@SHLIB_CFLAGS@
SHLIB_LD =		@SHLIB_LD@
SHLIB_SUFFIX =		@SHLIB_SUFFIX@
SRC_DIR =		@srcdir@

CFLAGS = -g
CC_SWITCHES = $(CFLAGS) -I${SRC_DIR}/../../generic -DTCL_MEM_DEBUG \
	${SHLIB_CFLAGS}

all:  pkgIndex.tcl

pkgIndex.tcl:	pkga${SHLIB_SUFFIX} pkgb${SHLIB_SUFFIX} \
	pkgc${SHLIB_SUFFIX} pkgd${SHLIB_SUFFIX} pkge${SHLIB_SUFFIX}
	( echo "pkg_mkIndex . pkga${SHLIB_SUFFIX} pkgb${SHLIB_SUFFIX} \
	pkgc${SHLIB_SUFFIX} pkgd${SHLIB_SUFFIX}") | @TCLSH@

pkga${SHLIB_SUFFIX}: $(SRC_DIR)/pkga.c ../Makefile
	$(CC) -c $(CC_SWITCHES) $(SRC_DIR)/pkga.c
	${SHLIB_LD} -o pkga${SHLIB_SUFFIX} pkga.o @SHLIB_LD_LIBS@

pkgb${SHLIB_SUFFIX}: $(SRC_DIR)/pkgb.c ../Makefile
	$(CC) -c $(CC_SWITCHES) $(SRC_DIR)/pkgb.c
	${SHLIB_LD} -o pkgb${SHLIB_SUFFIX} pkgb.o @SHLIB_LD_LIBS@

pkgc${SHLIB_SUFFIX}: $(SRC_DIR)/pkgc.c ../Makefile
	$(CC) -c $(CC_SWITCHES) $(SRC_DIR)/pkgc.c
	${SHLIB_LD} -o pkgc${SHLIB_SUFFIX} pkgc.o @SHLIB_LD_LIBS@

pkgd${SHLIB_SUFFIX}: $(SRC_DIR)/pkgd.c ../Makefile
	$(CC) -c $(CC_SWITCHES) $(SRC_DIR)/pkgd.c
	${SHLIB_LD} -o pkgd${SHLIB_SUFFIX} pkgd.o @SHLIB_LD_LIBS@

pkge${SHLIB_SUFFIX}: $(SRC_DIR)/pkge.c ../Makefile
	$(CC) -c $(CC_SWITCHES) $(SRC_DIR)/pkge.c
	${SHLIB_LD} -o pkge${SHLIB_SUFFIX} pkge.o @SHLIB_LD_LIBS@

clean:
	rm -f *.o *${SHLIB_SUFFIX} config.cache config.log config.status \
		lib.exp pkgIndex.tcl

distclean: clean
	rm -f Makefile
